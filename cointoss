import java.util.Scanner;

public class cointoss {
	public static void main(String[] args){

	Scanner raw = new Scanner(System.in);
	System.out.println("How many trials?");
	int trials = raw.nextInt(); //getting how many trials is requested
	
	int heads = 0; // setting up the counters for heads and tails
	int tails = 0;
	int counter = 0;

	while (counter < trials)
	{Double x;
	x = Math.random();
	System.out.println(x); //to test if it works

	if (x < .5)
	{heads += 1;}
	else
	{tails +=1;}

	counter += 1;		}

	System.out.println("Heads: " + heads); //printing the results
	System.out.println("Tails: " + tails);
	System.out.println("Trials: " + trials);
	}
}
